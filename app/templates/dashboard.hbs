{{#dismissable-content}}
  <div class="row" id="landing-header">
    <div class="text-center" id="landing-header">
      <h1><img src="brandr.png" class="center-block col-xs-1"></h1>
      <h2>Discover brands on your pictures.</h2>
      <p>A community of hunters to help you figure out what are thooose !</p>
    </div>
  </div>
{{/dismissable-content}}
<div class="row">
  <nav id="dashboard-header" class="navbar navbar-default">
    <div class="row">
      <div class="col-xs-12">
        <div class="text-center center-block col-xs-1">
          {{#link-to 'dashboard.hunts'}}
            <img src="brandr.png" class="brndr-logo col-xs-12">
          {{/link-to}}
        </div>
        <div class="navbar-right-side pull-right">
          {{#if session.isAuthenticated}}
            <div>
              {{#link-to "dashboard.hunts.new.photo" id="brndr-hnt-add"
                                              class="btn btn-default pull-left"}}
                +
              {{/link-to}}
              <div id="brndr-profile-enter" class="dropdown pull-left">
                <button class="btn btn-default dropdown-toggle" type="button"
                        id="profile-entry-menu" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="true">
                  {{currentUser.fullname}}
                </button>
                <ul class="dropdown-menu" aria-labelledby="profile-entry-menu">
                  <li><a {{action "invalidateSession"}}>Logout</a></li>
                </ul>
              </div>
            </div>
          {{else}}
            <div id="go-to-login">
              {{#link-to "dashboard.hunts.login"}}Enter Brandr{{/link-to}}
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </nav>
  <div class="container">
    {{outlet}}
  </div>
</div>
